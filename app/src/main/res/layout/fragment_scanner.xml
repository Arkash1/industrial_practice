<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.camera.view.PreviewView
        android:id="@+id/previewView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Рамка фокуса -->
    <View
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:background="@drawable/scanner_frame" />

    <!-- Подсказка -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="120dp"
        android:text="Наведите камеру на QR-код"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:background="#80000000"
        android:padding="12dp" />

    <!-- Кнопка фонарика -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonFlashlight"
        style="@style/Widget.Material3.Button.TonalButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="56dp"
        android:text="Вкл. фонарик"
        app:icon="@drawable/ic_flashlight"
        xmlns:app="http://schemas.android.com/apk/res-auto" />

    <!-- Сообщение о разрешении -->
    <LinearLayout
        android:id="@+id/textPermissionMessage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        android:padding="32dp">

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_camera_off"
            android:contentDescription="Камера недоступна" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Для сканирования QR-кодов необходимо разрешение на использование камеры"
            android:textAlignment="center"
            android:layout_marginTop="16dp"
            android:textAppearance="?attr/textAppearanceBodyLarge" />
    </LinearLayout>

</FrameLayout>